@using MyBlog.Domains.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Вход в аккаунт</h4>
        </p>
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Login">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float right" type="submit" value="Войти" />
                        <p>Еще нет аккаунта -<a class="alert-link" asp-controller="Account" asp-action="Register"> Зарегистрироваться </a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
