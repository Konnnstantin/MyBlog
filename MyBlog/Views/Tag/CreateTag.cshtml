@model MyBlog.Domains.ViewModels.TagCreateViewModel

<div class="container-page">
    <h2 class="title-margin">Добавление тега</h2>
    <form method="post" asp-controller="Tag" asp-action="CreateTag">
        <div style="margin-bottom: 5px">
            <label asp-for="PostTag"></label><br />
            <input class="form-control" asp-for="PostTag" />
            <span asp-validation-for="PostTag" class="text-danger"></span>
        </div>
        <div>
            <input class="btn btn-sm btn-primary" type="submit" value="Создать" />
        </div>
        <p>
            <a method="get" asp-controller="Tag" asp-action="GetTags">Перейти к списку всех тегов </a>
        </p>
    </form>
</div>